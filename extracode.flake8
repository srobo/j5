[flake8]
exclude =
    .git,
    .pybuild,
    .eggs,
    __pycache__,
    .venv

ignore =
    # Allow printing
    T201,
    #Don't require docstrings on magic methods.
    D105,
    #Don't require docstrings for __init__ methods.
    D107,
    # Don't require docstring in public module
    D100,
    #Don't require imperative mood docstrings.
    D401

max_line_length = 90
